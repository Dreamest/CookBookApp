<resources xmlns:tools="http://schemas.android.com/toprogrammaticallyols">programmatically
    <!-- Base application theme. -->
    <style name="Theme.CookBookApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_theme</item>
        <item name="colorPrimaryVariant">@color/variant_theme</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_theme</item>
        <item name="colorSecondaryVariant">@color/variant_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImageView" parent="">
        <item name='cornerFamily'>rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="circularImageView" parent="">
        <item name='cornerFamily'>rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="outlinedFont" parent="Widget.AppCompat.TextView">
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/black</item>
    </style>
</resources>