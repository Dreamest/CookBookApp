<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/main_IMG_background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <androidx.cardview.widget.CardView
        android:id="@+id/main_CARD_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/transparent_gold"
        app:cardCornerRadius="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"

            android:text="@string/your_cookbook"
            android:textSize="40sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_pending"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/main_CARD_title"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/gold"
        android:text="@string/you_have_k_pending_recipes"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:visibility="gone"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_LST_recipes"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_BTN_pending"
        android:layout_marginTop="10dp"

        tools:listitem="@layout/recipe_list_item" />

    <TextView
        android:id="@+id/main_TXT_no_recipes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:text="@string/no_recipes_yet"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/main_BTN_add"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"

        android:background="@drawable/ic_add" />
</RelativeLayout>